// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ORGANIZER
  ATTENDEE
  ADMIN
  SCANNER
}

enum TicketStatus {
  PENDING
  CONFIRMED
  CANCELLED
  CHECKED_IN
}

enum PaymentMethod {
  STRIPE
  MPESA
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  phone     String?
  name      String
  password  String?  // Optional for OAuth users
  googleId  String? // Google OAuth ID
  role      UserRole @default(ATTENDEE)

  // Authentication fields
  verified          Boolean   @default(false)
  verificationToken String?
  verificationExpires DateTime?
  otp               String?
  otpExpires        DateTime?
  lastLogin         DateTime?
  loginAttempts     Int       @default(0)
  lockUntil         DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  organizedEvents Event[]    @relation("EventOrganizer")
  tickets         Ticket[]
  sessions        Session[]
  auditLogs       AuditLog[]

  @@map("users")
}

model Event {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  venue       String
  date        DateTime
  endDate     DateTime?
  imageUrl    String?
  category    String
  organizerId String    @db.ObjectId
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Pricing
  basePrice Float  @default(0)
  currency  String @default("USD")

  // Relations
  organizer User      @relation("EventOrganizer", fields: [organizerId], references: [id])
  tickets   Ticket[]
  checkIns  CheckIn[]
  scanners  Scanner[]

  @@index([organizerId])
  @@index([date])
  @@index([category])
  @@map("events")
}

model Ticket {
  id       String       @id @default(auto()) @map("_id") @db.ObjectId
  eventId  String       @db.ObjectId
  userId   String       @db.ObjectId
  status   TicketStatus @default(PENDING)
  paymentMethod PaymentMethod @default(STRIPE)
  price    Float
  quantity Int          @default(1)

  // Stripe
  stripePaymentId String?
  stripeSessionId String?

  // M-Pesa
  mpesaCheckoutRequestId String?
  mpesaMerchantRequestId String?
  mpesaReceiptNumber     String?
  mpesaPhoneNumber       String?

  // QR Code
  qrCodeData  String  @unique
  qrCodeImage String? // Base64 or URL

  // Check-in
  checkedInAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  event   Event    @relation(fields: [eventId], references: [id])
  user    User     @relation(fields: [userId], references: [id])
  checkIn CheckIn?

  @@index([eventId])
  @@index([userId])
  @@index([status])
  @@map("tickets")
}

model CheckIn {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ticketId    String   @unique @db.ObjectId
  eventId     String   @db.ObjectId
  checkedInAt DateTime @default(now())
  scannerId   String?  @db.ObjectId // Who scanned the ticket

  // Relations
  ticket  Ticket  @relation(fields: [ticketId], references: [id])
  event   Event   @relation(fields: [eventId], references: [id])
  scanner Scanner? @relation(fields: [scannerId], references: [id])

  @@index([eventId])
  @@index([checkedInAt])
  @@index([scannerId])
  @@map("checkins")
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

model Scanner {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  deviceId    String   @unique
  secret      String
  eventId     String?  @db.ObjectId
  isActive    Boolean  @default(true)
  lastUsed    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  event    Event?    @relation(fields: [eventId], references: [id])
  checkIns CheckIn[]

  @@index([eventId])
  @@map("scanners")
}

model AuditLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?  @db.ObjectId
  action    String
  resource  String
  details   String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  // Relations
  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
